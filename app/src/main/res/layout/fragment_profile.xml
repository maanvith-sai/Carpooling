<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ProfileFragment">

        <TextView
            android:id="@+id/profileAboutYou2"
            android:layout_width="198dp"
            android:layout_height="29dp"
            android:layout_marginTop="50dp"
            android:text="Account Details"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.201"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/publishedRides" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/yourRidesProfile"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.897"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="116dp"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/yourRidesProfile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileEditImage"
            android:layout_width="144dp"
            android:layout_height="34dp"
            android:layout_marginTop="75dp"
            android:text="Edit Profile Picture"
            android:textColor="@color/yellow"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileName" />

        <TextView
            android:id="@+id/profileEditDetails"
            android:layout_width="165dp"
            android:layout_height="31dp"
            android:layout_marginTop="50dp"
            android:text="Edit Personal details"
            android:textColor="@color/yellow"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileEditImage" />

        <TextView
            android:id="@+id/publishedRides"
            android:layout_width="165dp"
            android:layout_height="31dp"
            android:layout_marginTop="50dp"
            android:text="Your Published Rides"
            android:textColor="@color/yellow"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileEditDetails" />

        <TextView
            android:id="@+id/profileChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Change Password"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.245"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileAboutYou2" />

        <TextView
            android:id="@+id/profileLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Logout"
            android:textColor="@color/yellow"
            android:textSize="22dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.198"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileChangePassword" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>