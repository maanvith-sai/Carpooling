<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="15dp"
    android:elevation="10dp"
    style="@style/Widget.MaterialComponents.CardView">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/resultProfile"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />

        <TextView
            android:id="@+id/resultUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/resultProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/resultProfile"
            app:layout_constraintTop_toBottomOf="@+id/resultUsername" />

        <TextView
            android:id="@+id/resultsDate"
            android:layout_width="79dp"
            android:layout_height="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/resultProfile"
            app:layout_constraintTop_toBottomOf="@+id/resultStartTime" />

        <TextView
            android:id="@+id/kk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:text="-->"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/resultFrom"
            app:layout_constraintTop_toBottomOf="@+id/resultUsername" />

        <TextView
            android:id="@+id/resultTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/kk"
            app:layout_constraintTop_toBottomOf="@+id/resultUsername" />

        <TextView
            android:id="@+id/resultIntermediateLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultsDate" />

        <TextView
            android:id="@+id/resultDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="4dp"
            android:textSize="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultIntermediateLoc" />

        <TextView
            android:id="@+id/resultStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/resultProfile"
            app:layout_constraintTop_toBottomOf="@+id/resultFrom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>